import { serve } from "https://deno.land/std@0.168.0/http/server.ts";

const corsHeaders = {
  'Access-Control-Allow-Origin': '*',
  'Access-Control-Allow-Headers': 'authorization, x-client-info, apikey, content-type',
};

serve(async (req) => {
  if (req.method === 'OPTIONS') {
    return new Response(null, { headers: corsHeaders });
  }

  try {
    const { action, text, grade, language } = await req.json();
    const LOVABLE_API_KEY = Deno.env.get('LOVABLE_API_KEY');
    
    if (!LOVABLE_API_KEY) {
      throw new Error('LOVABLE_API_KEY is not configured');
    }

    let systemPrompt = '';
    let userPrompt = '';

    if (action === 'summarize') {
      const gradeLevel = grade <= 2 ? 'very simple, using short sentences' : 
                         grade <= 4 ? 'simple and clear' : 'clear but can include some detail';
      
      systemPrompt = language === 'es' 
        ? `Eres un asistente educativo para niños de ${grade}° grado. Resume textos de forma ${gradeLevel}. Usa vocabulario apropiado para su edad. Responde SOLO en español.`
        : `You are an educational assistant for ${grade}th grade children. Summarize texts in a ${gradeLevel} way. Use age-appropriate vocabulary. Respond ONLY in English.`;
      
      userPrompt = language === 'es'
        ? `Resume el siguiente texto para un estudiante de ${grade}° grado. El resumen debe tener máximo 3-4 oraciones:\n\n${text}`
        : `Summarize the following text for a ${grade}th grade student. The summary should have maximum 3-4 sentences:\n\n${text}`;
    } 
    else if (action === 'suggest_searches') {
      systemPrompt = language === 'es'
        ? `Eres un tutor que ayuda a niños de ${grade}° grado a investigar. Sugiere búsquedas relacionadas con el tema. Responde SOLO con una lista JSON de 3-4 sugerencias cortas.`
        : `You are a tutor helping ${grade}th grade children research. Suggest searches related to the topic. Respond ONLY with a JSON list of 3-4 short suggestions.`;
      
      userPrompt = language === 'es'
        ? `El estudiante está investigando sobre: "${text}". Sugiere 3-4 búsquedas relacionadas que podrían ampliar su investigación. Responde en formato JSON: ["sugerencia1", "sugerencia2", ...]`
        : `The student is researching: "${text}". Suggest 3-4 related searches that could expand their research. Respond in JSON format: ["suggestion1", "suggestion2", ...]`;
    }
    else if (action === 'highlight_keywords') {
      systemPrompt = language === 'es'
        ? `Eres un asistente educativo. Identifica las palabras clave más importantes de un texto para niños de ${grade}° grado.`
        : `You are an educational assistant. Identify the most important keywords from a text for ${grade}th grade children.`;
      
      userPrompt = language === 'es'
        ? `Identifica 5-8 palabras clave importantes del siguiente texto. Responde en formato JSON: ["palabra1", "palabra2", ...]:\n\n${text}`
        : `Identify 5-8 important keywords from the following text. Respond in JSON format: ["word1", "word2", ...]:\n\n${text}`;
    }

    const response = await fetch('https://ai.gateway.lovable.dev/v1/chat/completions', {
      method: 'POST',
      headers: {
        'Authorization': `Bearer ${LOVABLE_API_KEY}`,
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        model: 'google/gemini-2.5-flash',
        messages: [
          { role: 'system', content: systemPrompt },
          { role: 'user', content: userPrompt }
        ],
      }),
    });

    if (!response.ok) {
      if (response.status === 429) {
        return new Response(JSON.stringify({ error: 'Demasiadas solicitudes. Intenta de nuevo en un momento.' }), {
          status: 429,
          headers: { ...corsHeaders, 'Content-Type': 'application/json' },
        });
      }
      if (response.status === 402) {
        return new Response(JSON.stringify({ error: 'Créditos agotados. Contacta al administrador.' }), {
          status: 402,
          headers: { ...corsHeaders, 'Content-Type': 'application/json' },
        });
      }
      const errorText = await response.text();
      console.error('AI gateway error:', response.status, errorText);
      throw new Error(`AI gateway error: ${response.status}`);
    }

    const data = await response.json();
    const content = data.choices?.[0]?.message?.content || '';

    return new Response(JSON.stringify({ result: content }), {
      headers: { ...corsHeaders, 'Content-Type': 'application/json' },
    });
  } catch (error) {
    console.error('Error in research-ai function:', error);
    return new Response(JSON.stringify({ error: error instanceof Error ? error.message : 'Unknown error' }), {
      status: 500,
      headers: { ...corsHeaders, 'Content-Type': 'application/json' },
    });
  }
});
